<h1 class ="text-center"><%= @flat.title %></h1>
<div class="text-center">
  <% if @flat.pictures != [] %>
    <% @flat.pictures.each do |pic| %>
      <%= image_tag pic.flat_image(:medium) %>
    <% end %>
  <% else %>
    <img src="http://lorempixel.com/640/480/city/" alt="Random city picture">
  <% end %>


  <!-- For the renter only -->
  <% unless @flat.user == current_user %>
    <p>    </p>
    <p><%= link_to "Book this flat", new_flat_booking_path(@flat), class: 'bookingBtn'%></p>
  <% end %>

  <p>    </p>
  <p>Street address: <%= @flat.address %></p>
  <p>Price: <%= @flat.price_per_day %> â‚¬ / day</p>
  <p>Housing type: <%= @flat.housing_type %></p>
  <p>Up to <%= @flat.capacity %> persons</p>
  <p>Description: <%= @flat.description %></p>
</div>
<!-- TODO List all photos -->


<!-- For the owner only -->
<div class="container">
  <div class="row">
    <ul class="text-center list-unstyled">
      <% if user_signed_in? %>
        <% if @flat.user == current_user %>
          <div class="col-xs-12 col-sm-6">
            <li class="btn btn-default"><%= link_to "Add a picture for the flat", new_flat_picture_path(@flat) %></li>
          </div>
          <div class="col-xs-12 col-sm-6">
            <li class="btn btn-default"><%= link_to "Edit the flat", edit_flat_path(@flat) %></li>
          </div>
          <div class="col-xs-12 col-sm-6">
            <li class="btn btn-default"><%= link_to "Delete this flat", flat_path(@flat), method: :delete,
          data:{ confirm: "Are you sure?" } %></li>
          </div>
        <% end %>
      <% end %>
      <!-- shared between owner and renter -->
      <div class="col-xs-12 col-sm-6">
        <li class="btn btn-default"><%= link_to "Back to all flats", flats_path %></li>
      </div>
    </ul>
  </div>
</div>