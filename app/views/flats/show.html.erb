<h1><%= @flat.title %></h1>
<p><%= @flat.address %></p>
<p><%= @flat.price_per_day %> â‚¬ / day</p>
<p><%= @flat.housing_type %></p>
<p><%= @flat.capacity %> persons</p>
<p><%= @flat.description %></p>

<!-- TODO List all photos -->

<% if @flat.pictures != [] %>
  <%= @flat.pictures.each do |pic| %>
    <%= image_tag pic.flat_image(:medium) %>
  <% end %>
<% else %>
  <p><%= link_to 'Ask the owner to upload some pictures!', flats_path %></p>
  <!-- TODO link to user profile -->
<% end %>

<ul>
<li><%= link_to "Book this flat", new_flat_booking_path(@flat) %></li>

<li><%= link_to "Add a picture for the flat", new_flat_picture_path(@flat) %></li>
<li><%= link_to "Edit the flat", edit_flat_path(@flat) %></li>
<li><%= link_to "Back to all flats", flats_path %></li>
<li><%= link_to "Delete this flat", flat_path(@flat), method: :delete,
data:{ confirm: "Are you sure?" } %></li>
</ul>