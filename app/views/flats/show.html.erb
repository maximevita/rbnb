<h1><%= @flat.title %></h1>
<div class="text-center">
  <% if @flat.pictures != [] %>
    <%= @flat.pictures.each do |pic| %>
      <%= image_tag pic.flat_image(:medium) %>
    <% end %>
  <% else %>
    <img src="http://lorempixel.com/640/480/city/" alt="Random city picture">
  <% end %>


<!-- For the renter only -->
<p><%= link_to "Book this flat", new_flat_booking_path(@flat), class: 'bookingBtn'%></p>

<!-- end -->
<p>    </p>
<p>Street address: <%= @flat.address %></p>
