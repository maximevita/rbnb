        <h3 class="panel-title"><i class="fa fa-envelope"></i> Email</h3>
      </div>
      <div class="panel-body">
        <%= @user.email %>
      </div>
    </div>
  </li>
  <li>
    <div class="panel panel-default" id="info-profile">
      <div class="panel-heading">
