      </div>
      <div class="panel-body">
        *************
      </div>
    </div>
  </li>
  <li>
    <div class="panel panel-default" id="info-profile">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-male"></i> Name</h3>
      </div>
      <div class="panel-body">
        <%= @user.name %>
      </div>
    </div>
  </li>
  <li>
    <div class="panel panel-default" id="info-profile">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-phone"></i> Phone</h3>
